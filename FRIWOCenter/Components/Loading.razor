@namespace FRIWOCenter.Components

@using FRIWOCenter.Shared

<div class="card" style="height:100%;width:100%">
    <div class="flex-column">
         <div class="logo-container d-flex align-items-center justify-content-center">
                    <div class="icon-logo menu-icon" />
                </div>
        <div class="d-flex justify-content-center">
            @if(LoadIndicator)
            {

                <span class="splash-screen-text text-opacity-25 text-center">Loading...</span>
            }
            else
            {
                var configStep = Configuring?"Configuring...":"Navigating...";
                <span class="splash-screen-text text-opacity-25 text-center">@configStep</span>
            }
            @*<div class="spinner-border text-success" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>*@
        </div>
         <MatProgressBar Indeterminate=true Style="color:darkorange"></MatProgressBar>
    </div>
</div>


@code {
    [Parameter] public bool LoadIndicator { get; set; }

    [Parameter] public bool Configuring { get; set; }
}
